<main class="container py-4">
    <div class="row g-4">
        <!-- Main content -->
        <div class="col-lg-8">
            <!-- Header course -->
            <div class="row g-3 align-items-start">
                <div class="col-sm-5">
                    <div class="ratio ratio-16x9">
                        <img src="/images/{{course.hero_image_url}}.jpg" alt="Course"
                            class="img-fluid rounded object-fit-cover w-100 h-100">
                    </div>
                </div>
                <div class="col-sm-7">
                    <h1 class="h3 mb-1">{{course.title}}</h1>
                    <div class="text-muted small">{{course.updated_at}}</div>
                    <div class="mt-2 d-flex align-items-center gap-2">
                        <span class="badge text-bg-warning">★ {{course.rating_avg}}</span>
                        <span class="small text-muted">{{course.rating_count}} đánh giá</span>
                    </div>
                    <div class="mt-2 d-flex flex-wrap gap-2">
                        <span class="badge text-bg-primary">Node.js</span>
                        <span class="badge text-bg-secondary">Express</span>
                        <span class="badge text-bg-info">REST API</span>
                    </div>
                </div>
            </div>

            <!-- What you'll learn -->
            <section class="card mt-4 shadow-sm">
                <div class="card-header fw-semibold">Bạn sẽ học được</div>
                <div class="card-body">
                    <div class="row row-cols-1 row-cols-md-2 g-2">
                        {{#each lessons}}
                        <div class="col d-flex gap-2"><span class="text-success">✔</span><span>{{lesson}}</span></div>
                        {{/each}}
                    </div>
                </div>
            </section>

            <!-- Description -->
            <section class="card mt-4 shadow-sm">
                <div class="card-header fw-semibold">Giới thiệu khóa học</div>
                <div class="card-body">
                    <p>{{course.long_desc}}</p>
                </div>
            </section>

            <!-- Curriculum -->
            <section class="card mt-4 shadow-sm">
                <div class="card-header fw-semibold d-flex justify-content-between align-items-center">
                    <span>Nội dung khóa học</span>

                </div>

            </section>
        </div>

        <!-- Sidebar purchase -->
        <div class="col-lg-4">
            <aside class="sticky-top">
                <div class="card shadow-sm">
                    <div class="ratio ratio-16x9">
                        <img src="/images/{{course.hero_image_url}}.jpg"
                            class="card-img-top object-fit-cover w-100 h-100" alt="Course cover">
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-baseline mb-2">
                            <div class="fs-4 fw-bold">{{course.price}}</div>
                            <span class="badge text-bg-danger">Bán chạy</span>
                        </div>

                        <!-- State: NOT ENROLLED (default) -->
                        <div id="box-not-enrolled">
                            <form method="post" action="/courses/purchase-courses-process/{{course.id}}">
                                <button type="submit" class="btn btn-primary w-100">Mua khóa học</button>
                            </form>
                            <a href="/courses/preview-lessons" class="btn btn-outline-secondary w-100 mt-2">Xem trước
                                bài học</a>
                            <div class="text-center my-3 text-muted">hoặc</div>
                            <a href="/courses/add-favorite" class="btn btn-outline-secondary w-100">Thêm vào danh sách
                                yêu thích</a>
                        </div>