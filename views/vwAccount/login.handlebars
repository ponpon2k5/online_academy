<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-7 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h1 class="h4 mb-3 text-center">Đăng nhập</h1>

                    {{#if error}}
                    <div class="alert alert-danger" role="alert">{{error}}</div>
                    {{/if}}
                    {{#if message}}
                    <div class="alert alert-success" role="alert">{{message}}</div>
                    {{/if}}

                    <form class="needs-validation" novalidate method="post" action="/auth/login">

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input id="email" name="email" type="email" class="form-control" required
                                placeholder="name@example.com" />
                            <div class="invalid-feedback">Vui lòng nhập email hợp lệ.</div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mật khẩu</label>
                            <input id="password" name="password" type="password" class="form-control" required
                                minlength="6" />
                            <div class="invalid-feedback">Mật khẩu tối thiểu 6 ký tự.</div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="1" id="remember" name="remember">
                                <label class="form-check-label" for="remember">Ghi nhớ</label>
                            </div>
                            <a href="/auth/forgot">Quên mật khẩu?</a>
                        </div>

                        <button class="btn btn-primary w-100" type="submit">Đăng nhập</button>
                    </form>

                    <div class="text-center mt-3">
                        <span>Chưa có tài khoản?</span> <a href="/auth/signup">Đăng ký</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>