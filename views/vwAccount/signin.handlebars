<form action="" method="post" id="frmLogin">
  <div class="card border-0 shadow-lg border-primary mx-auto" style="max-width: 500px;">
    <div class="card-header bg-white border-0 py-3">
      <h4 class="card-title mb-0 text-center">Đăng nhập tài khoản</h4>
    </div>
    <div class="card-body p-4">
      {{#if error}}
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <strong>Lỗi!</strong> Tên đăng nhập hoặc mật khẩu không đúng.
      </div>
      {{/if}}
      <div class="mb-3">
        <label for="txtUsername" class="form-label fw-medium">Tên người dùng</label>
        <input type="text" class="form-control form-control-lg" id="txtUsername" name="username" placeholder="Nhập tên người dùng" autofocus>
      </div>
      <div class="mb-3">
        <label for="txtPassword" class="form-label fw-medium">Mật khẩu</label>
        <input type="password" class="form-control form-control-lg" id="txtPassword" name="password" placeholder="Nhập mật khẩu">
      </div>

      <hr class="my-4">
      
      <button type="submit" class="btn btn-primary btn-lg w-100 py-2 fw-bold mb-3">
        <i class="bi bi-box-arrow-in-right me-2"></i> ĐĂNG NHẬP
      </button>

      <div class="text-center mb-3">
        <span class="text-muted">Hoặc đăng nhập bằng</span>
      </div>

      <div class="d-grid gap-2">
        <a href="/account/auth/google" class="btn btn-danger btn-lg">
          <i class="bi bi-google me-2"></i> Đăng nhập bằng Google
        </a>
        <a href="/account/auth/facebook" class="btn btn-primary btn-lg">
          <i class="bi bi-facebook me-2"></i> Đăng nhập bằng Facebook
        </a>
      </div>
    </div>
  </div>
</form>