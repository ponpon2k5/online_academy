<div class="container mt-4">
  <h4>Kết quả tìm kiếm cho: "{{query}}"</h4>
  <div class="row mt-3">
    {{#each results}}
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
          <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}">
          <div class="card-body">
            <h5>{{this.title}}</h5>
            <p>{{this.description}}</p>
            <a href="/course/{{this.id}}" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
