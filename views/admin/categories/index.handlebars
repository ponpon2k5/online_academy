<h1 class="mb-3">Categories</h1>
<a class="btn btn-primary" href="/admin/categories/new">New</a>

<table class="table table-striped mt-3">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Slug</th>
      <th>Parent</th>
      <th style="width:180px">Actions</th>  
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
      <tr>
        <td>{{id}}</td>
        <td>{{name}}</td>
        <td>{{slug}}</td>
        <td>{{parent_id}}</td>
        <td>
          <a class="btn btn-sm btn-secondary" href="/admin/categories/{{id}}/edit">Edit</a>  
          <form action="/admin/categories/{{id}}/delete" method="post" style="display:inline" onsubmit="return confirm('Delete this category?')">
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
