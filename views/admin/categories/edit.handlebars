<h1 class="mb-3">Edit Category</h1>

<form method="post" action="/admin/categories/{{cat.id}}">
  <div class="mb-3">
    <label>Name</label>
    <input name="name" class="form-control" value="{{cat.name}}" required>
  </div>

  <div class="mb-3">
    <label>Parent (optional)</label>
    <select name="parent_id" class="form-select">
      <option value="">-- none --</option>
      {{#each parents}}
        <option value="{{id}}" {{#if (eq id ../cat.parent_id)}}selected{{/if}}>{{name}}</option>
      {{/each}}
    </select>
  </div>

  <button class="btn btn-primary">Save</button>
  <a href="/admin/categories" class="btn btn-outline-secondary">Cancel</a>
</form>
